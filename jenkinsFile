@Library("Jenkins-pipeline-library") _

pipeline {
    agent any
    stages {
        stage('Code Demo') {
            steps {
               script {
                    def workingDir = checkoutScm("https://github.com/ramakrishnade/hello-app.git", "master")
                }
            }
        }
        stage('Code Checkout') {
            steps {
               script {
                  sayHello()
                    echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
                    echo "BUILDNumber ${env.BUILD_NUMBER} and BUILDTAG ${env.BUILD_TAG}"
                }
            }
        }
    }
}
