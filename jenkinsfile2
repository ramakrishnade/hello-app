@Library("Jenkins-pipeline-library@main")_

pipeline
{
    agent {label 'linux'}
    stages
    {
        stage('Checkout Scm')
        {
            steps
            {
               checkoutScm(branch : "master", repoUrl : "https://github.com/ramakrishnade/hello-app.git")
               echo "Hello-world"
                sh 'docker images'
                sh 'git -v'
                sh 'docker -v'
                sh 'java -version'
                sh 'docker ps'
                sh 'docker ps -a'
                //sh 'npm -v'
            }
        }
    }
    post {
        always {
            echo 'I will always execute this!'
        }
        aborted {
            echo 'aborted'
        }
        failure {
            echo 'Release Failed'
        }
        success {
            echo 'Release Success'
        }
        cleanup {
            cleanup_workspace_folder()
        }
    }


}