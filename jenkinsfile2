@Library("Jenkins-pipeline-library@main")_

pipeline
{
    agent {label 'linux'}
    environment {
        EMAIL_TO = 'ramky.drk@gmail.com'
    }
    stages
    {
        stage('Checkout Scm')
        {
            steps
            {
               checkoutScm(branch : "master", repoUrl : "https://github.com/ramakrishnade/hello-app.git")
               echo "Hello-world"
                sh 'docker images'
                sh 'git -v'
                sh 'docker -v'
                sh 'java -version'
                sh 'docker ps'
                sh 'docker ps -a'
                //sh 'npm -v'
            }
        }
    }
    post {
        always {
            emailext (
                subject: "Jenkins Build ${currentBuild.currentResult }: Job ${env.JOB_NAME}",
                to: 'ramky.drk@gmail.com',
                body: "'<html>
                    <body>
                        <p>Build Status : ${currentBuild.currentResult}</p>
                        <p>Build Number ${env.BUILD_NUMBER}</p>
                        <p></p>
                    </body>
                </html>'",
                from: 'ramky.drk@gmail.com',
                replyTo: 'devulapally.ramu@gmail.com',
                mimeType: 'text/html'
            )
        }
        aborted {
            echo 'aborted'
        }
        failure {
            echo 'Release Failed'
        }
        success {
            echo 'Release Success'
        }
        cleanup {
            cleanup_workspace_folder()
        }
    }


}